CONFIGURE_TARGET=	${MACHINE_ARCH}-dports-dragonfly
LDFLAGS+=		-z,nocombreloc

post-extract:
	${CP} ${DFLY_FILESDIR}/dragonfly.h ${WRKSRC}/src/s/

pre-configure:
.for F in src/Makefile.in lib-src/Makefile.in
	${AWK} '{if (sub(/\\$$/,"")) printf "%s", $$0; else print $$0}' \
		${WRKSRC}/${F} > ${WRKSRC}/${F}.x
	${MV} ${WRKSRC}/${F}.x ${WRKSRC}/${F}
.endfor
